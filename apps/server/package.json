{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:start": "docker compose up -d",
		"db:watch": "docker compose up",
		"db:stop": "docker compose stop",
		"db:down": "docker compose down",
		"db:seed": "bun run ./src/db/seed.ts",
		"db:reset": "docker-compose down -v && docker-compose up -d && pnpm db:push && pnpm db:seed",
		"test": "vitest"
	},
	"dependencies": {
		"@ai-sdk/google": "^2.0.8",
		"@better-auth/expo": "^1.3.7",
		"@hono/node-server": "^1.19.0",
		"@hono/trpc-server": "^0.4.0",
		"@trpc/client": "^11.5.0",
		"@trpc/server": "^11.5.0",
		"ai": "^5.0.22",
		"better-auth": "^1.3.7",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.4",
		"drizzle-seed": "^0.3.1",
		"hono": "^4.9.4",
		"nanoid": "^5.1.5",
		"ora": "^8.2.0",
		"pg": "^8.16.3",
		"uuid": "^11.1.0",
		"zod": "^4.1.0"
	},
	"devDependencies": {
		"@faker-js/faker": "^10.0.0",
		"@types/node": "^22.17.2",
		"@types/pg": "^8.15.5",
		"drizzle-kit": "^0.31.4",
		"tsdown": "^0.12.9",
		"tsx": "^4.20.4",
		"typescript": "^5.9.2",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	}
}
